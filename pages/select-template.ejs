<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/static/bootstrap/css/bootstrap.min.css" />
  <script src="/static/jquery.js"></script>
  <script src="/static/bootstrap/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">inPOSTER</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Select Template</a></li>
            <li class="disabled"><a href="#">Fill Placeholders</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <table class="table table-bordered">
<% 
    var ls = fs.readdirSync(__dirname+'/data/templates');
    for (var i = 0; i < ls.length; i++) {
      if (ls[i].match(/\.aep$/)) {
        %><tr><td><a href="fill-placeholders?name=<%= ls[i] %>"><%= ls[i] %></a></td></tr><%
      }
    }
%>
    </table>

    <a class="btn btn-default" href="upload-template">Upload New Template</a>
  </div>
</body>
